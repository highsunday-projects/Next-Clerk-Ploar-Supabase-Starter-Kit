# Next-Clerk-Polar-Supabase Starter Kit 環境變數範例
# 複製此檔案為 .env.local 並填入您的實際值

# =============================================================================
# Clerk 認證系統
# =============================================================================
# 從 Clerk Dashboard 獲取這些金鑰：https://dashboard.clerk.com/

# Clerk 公開金鑰（前端使用）
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Clerk 私密金鑰（後端使用）
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk Webhook 密鑰（用於驗證 Webhook 簽名）
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk 路徑設定
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# Supabase 資料庫
# =============================================================================
# 從 Supabase Dashboard 獲取這些金鑰：https://app.supabase.com/

# Supabase 專案 URL（前端使用）
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase 匿名金鑰（前端使用）
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# Supabase 服務角色金鑰（後端使用，具有完整權限）
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here

# =============================================================================
# Polar 付費系統（未來使用）
# =============================================================================
# 從 Polar Dashboard 獲取這些金鑰：https://polar.sh/

# Polar 存取權杖
POLAR_ACCESS_TOKEN=polar_at_your_access_token_here

# Polar Webhook 密鑰
POLAR_WEBHOOK_SECRET=polar_wh_your_webhook_secret_here

# Polar 組織 ID
POLAR_ORGANIZATION_ID=your_organization_id_here

# =============================================================================
# Next.js 應用程式設定
# =============================================================================

# 應用程式 URL（用於 Webhook 回調）
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 應用程式環境
NODE_ENV=development